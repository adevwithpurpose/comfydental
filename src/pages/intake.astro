---
import Layout from "../layouts/Layout.astro";

// This will be a client-side multi-step form
---

<Layout title="Digital Intake - Comfy Dental">
    <section
        class="min-h-screen bg-slate-50 py-12 flex items-center justify-center pt-24 md:pt-32"
    >
        <div class="container mx-auto px-4 max-w-2xl">
            <!-- Progress Bar -->
            <div class="mb-8 flex justify-between items-center px-2">
                <div class="flex gap-2 w-full max-w-[200px]">
                    <div
                        id="step-dot-1"
                        class="h-1.5 w-full rounded-full bg-primary transition-colors"
                    >
                    </div>
                    <div
                        id="step-dot-2"
                        class="h-1.5 w-full rounded-full bg-slate-200 transition-colors"
                    >
                    </div>
                    <div
                        id="step-dot-3"
                        class="h-1.5 w-full rounded-full bg-slate-200 transition-colors"
                    >
                    </div>
                </div>
                <span
                    id="step-label"
                    class="text-xs font-bold text-slate-400 uppercase tracking-widest"
                    >Step 1 of 3</span
                >
            </div>

            <div
                class="bg-white rounded-[2.5rem] shadow-2xl shadow-slate-200/50 p-8 md:p-12 border border-slate-100 relative overflow-hidden"
            >
                <!-- Decorative Elements -->
                <div
                    class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full -mr-16 -mt-16 blur-2xl"
                >
                </div>

                <form id="intake-form" class="relative z-10">
                    <!-- Step 1: Identity (Required Typing) -->
                    <div id="step-1" class="step-content space-y-8">
                        <div>
                            <h2 class="text-3xl font-bold text-slate-800 mb-2">
                                Let's get started
                            </h2>
                            <p class="text-slate-500 font-medium">
                                Please provide your basic contact details.
                            </p>
                        </div>

                        <div class="space-y-6">
                            <div>
                                <label
                                    class="block text-sm font-bold text-slate-700 mb-3 ml-1"
                                    >Your Full Name</label
                                >
                                <input
                                    type="text"
                                    name="full_name"
                                    placeholder="e.g. Ahmed Ali"
                                    class="w-full px-6 py-4 rounded-2xl bg-slate-50 border border-slate-100 focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all font-medium text-slate-800"
                                    required
                                />
                            </div>
                            <div>
                                <label
                                    class="block text-sm font-bold text-slate-700 mb-3 ml-1"
                                    >WhatsApp Number</label
                                >
                                <input
                                    type="tel"
                                    name="whatsapp"
                                    placeholder="03xx xxxxxxx"
                                    class="w-full px-6 py-4 rounded-2xl bg-slate-50 border border-slate-100 focus:outline-none focus:ring-4 focus:ring-primary/10 transition-all font-medium text-slate-800"
                                    required
                                />
                            </div>
                        </div>

                        <button
                            type="button"
                            onclick="nextStep(2)"
                            class="w-full py-5 bg-primary text-white font-bold rounded-2xl shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-[0.98] transition-all"
                        >
                            Continue to Health Check
                        </button>
                    </div>

                    <!-- Step 2: Visual Health Toggles (Minimum Writing) -->
                    <div id="step-2" class="step-content hidden space-y-8">
                        <div>
                            <h2 class="text-3xl font-bold text-slate-800 mb-2">
                                Quick Health Check
                            </h2>
                            <p class="text-slate-500 font-medium">
                                Tap any that apply to you. (Optional)
                            </p>
                        </div>

                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <label
                                class="relative flex items-center p-4 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="checkbox"
                                    name="health"
                                    value="allergies"
                                    class="hidden"
                                />
                                <div
                                    class="w-10 h-10 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform"
                                >
                                    ü§ß
                                </div>
                                <span class="font-bold text-slate-700"
                                    >Allergies?</span
                                >
                            </label>

                            <label
                                class="relative flex items-center p-4 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="checkbox"
                                    name="health"
                                    value="heart"
                                    class="hidden"
                                />
                                <div
                                    class="w-10 h-10 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform"
                                >
                                    ‚ù§Ô∏è
                                </div>
                                <span class="font-bold text-slate-700"
                                    >Heart Issues?</span
                                >
                            </label>

                            <label
                                class="relative flex items-center p-4 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="checkbox"
                                    name="health"
                                    value="diabetes"
                                    class="hidden"
                                />
                                <div
                                    class="w-10 h-10 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform"
                                >
                                    üç≠
                                </div>
                                <span class="font-bold text-slate-700"
                                    >Diabetes?</span
                                >
                            </label>

                            <label
                                class="relative flex items-center p-4 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="checkbox"
                                    name="health"
                                    value="pregnant"
                                    class="hidden"
                                />
                                <div
                                    class="w-10 h-10 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-4 group-hover:scale-110 transition-transform"
                                >
                                    ü§∞
                                </div>
                                <span class="font-bold text-slate-700"
                                    >Pregnant?</span
                                >
                            </label>
                        </div>

                        <div class="flex gap-4">
                            <button
                                type="button"
                                onclick="nextStep(1)"
                                class="w-1/3 py-5 bg-slate-100 text-slate-600 font-bold rounded-2xl hover:bg-slate-200 transition-all"
                            >
                                Back
                            </button>
                            <button
                                type="button"
                                onclick="nextStep(3)"
                                class="w-2/3 py-5 bg-primary text-white font-bold rounded-2xl shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-[0.98] transition-all"
                            >
                                Almost Done
                            </button>
                        </div>
                    </div>

                    <!-- Step 3: Goal Selection (Minimum Writing) -->
                    <div id="step-3" class="step-content hidden space-y-8">
                        <div>
                            <h2 class="text-3xl font-bold text-slate-800 mb-2">
                                What is your goal?
                            </h2>
                            <p class="text-slate-500 font-medium">
                                Help us prepare for your visit.
                            </p>
                        </div>

                        <div class="grid grid-cols-1 gap-3">
                            <label
                                class="relative flex items-center p-5 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="radio"
                                    name="goal"
                                    value="cleaning"
                                    class="hidden"
                                    checked
                                />
                                <div
                                    class="w-12 h-12 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-6 text-2xl"
                                >
                                    ‚ú®
                                </div>
                                <div>
                                    <p class="font-bold text-slate-800">
                                        Cleaning & Checkup
                                    </p>
                                    <p class="text-xs text-slate-500">
                                        I want my teeth healthy and white.
                                    </p>
                                </div>
                                <div
                                    class="ml-auto w-6 h-6 rounded-full border-2 border-slate-200 group-has-[:checked]:border-primary group-has-[:checked]:bg-primary flex items-center justify-center"
                                >
                                    <div
                                        class="w-2.5 h-2.5 bg-white rounded-full"
                                    >
                                    </div>
                                </div>
                            </label>

                            <label
                                class="relative flex items-center p-5 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="radio"
                                    name="goal"
                                    value="veneers"
                                    class="hidden"
                                />
                                <div
                                    class="w-12 h-12 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-6 text-2xl"
                                >
                                    üíé
                                </div>
                                <div>
                                    <p class="font-bold text-slate-800">
                                        Cosmetic Makeover
                                    </p>
                                    <p class="text-xs text-slate-500">
                                        Veneers, Whitening, or All-on-4.
                                    </p>
                                </div>
                                <div
                                    class="ml-auto w-6 h-6 rounded-full border-2 border-slate-200 group-has-[:checked]:border-primary group-has-[:checked]:bg-primary flex items-center justify-center"
                                >
                                    <div
                                        class="w-2.5 h-2.5 bg-white rounded-full"
                                    >
                                    </div>
                                </div>
                            </label>

                            <label
                                class="relative flex items-center p-5 rounded-2xl border border-slate-100 bg-slate-50 cursor-pointer hover:bg-white transition-all group has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                            >
                                <input
                                    type="radio"
                                    name="goal"
                                    value="pain"
                                    class="hidden"
                                />
                                <div
                                    class="w-12 h-12 rounded-xl bg-white border border-slate-100 flex items-center justify-center mr-6 text-2xl"
                                >
                                    ‚ö°
                                </div>
                                <div>
                                    <p class="font-bold text-slate-800">
                                        Dental Emergency
                                    </p>
                                    <p class="text-xs text-slate-500">
                                        I'm in pain and need immediate help.
                                    </p>
                                </div>
                                <div
                                    class="ml-auto w-6 h-6 rounded-full border-2 border-slate-200 group-has-[:checked]:border-primary group-has-[:checked]:bg-primary flex items-center justify-center"
                                >
                                    <div
                                        class="w-2.5 h-2.5 bg-white rounded-full"
                                    >
                                    </div>
                                </div>
                            </label>
                        </div>

                        <div class="flex gap-4">
                            <button
                                type="button"
                                onclick="nextStep(2)"
                                class="w-1/3 py-5 bg-slate-100 text-slate-600 font-bold rounded-2xl hover:bg-slate-200 transition-all"
                            >
                                Back
                            </button>
                            <button
                                type="submit"
                                class="w-2/3 py-5 bg-primary text-white font-bold rounded-2xl shadow-lg shadow-primary/20 hover:scale-[1.02] active:scale-[0.98] transition-all flex items-center justify-center gap-2"
                            >
                                Complete Registration
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="3"
                                        d="M5 13l4 4L19 7"></path></svg
                                >
                            </button>
                        </div>
                    </div>

                    <!-- Success State -->
                    <div id="success" class="hidden space-y-8 text-center py-8">
                        <div
                            class="w-24 h-24 bg-green-100 text-green-600 rounded-full flex items-center justify-center text-5xl mx-auto mb-6"
                        >
                            ‚úì
                        </div>
                        <div>
                            <h2 class="text-3xl font-bold text-slate-800 mb-2">
                                Thank you, <span id="user-name"></span>!
                            </h2>
                            <p class="text-slate-500 font-medium">
                                Your intake form has been sent to Dr. Anam.
                                <span class="block mt-2 text-mocha"
                                    >Our clinic assistant will reach out to you
                                    via WhatsApp shortly to finalize your
                                    appointment.</span
                                >
                            </p>
                        </div>
                        <a
                            href="/patient-hub"
                            class="inline-block px-10 py-5 bg-primary text-white font-bold rounded-2xl shadow-lg"
                            >Back to Patient Hub</a
                        >
                    </div>
                </form>
            </div>

            <!-- Security Note -->
            <p
                class="mt-8 text-center text-slate-400 text-xs font-medium uppercase tracking-widest flex items-center justify-center gap-2"
            >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"
                    ><path
                        fill-rule="evenodd"
                        d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm9.496 10.376A9.946 9.946 0 0110 16.457a9.946 9.946 0 01-1.662-1.082 1 1 0 10-1.111 1.664 11.946 11.946 0 003.327 2.162 1 1 0 00.892 0 11.946 11.946 0 003.327-2.162 1 1 0 10-1.111-1.664z"
                    ></path></svg
                >
                HIPAA Compliant & Secure Transmission
            </p>
        </div>
    </section>
</Layout>

<script is:inline>
    function nextStep(step) {
        // Validation for Step 1
        if (step === 2) {
            const name = document.querySelector(
                'input[name="full_name"]',
            ).value;
            const phone = document.querySelector(
                'input[name="whatsapp"]',
            ).value;

            if (!name || name.trim() === "" || !phone || phone.trim() === "") {
                alert(
                    "Please provide your Name and WhatsApp number to continue.",
                );
                return;
            }
        }

        // Hide all steps
        document
            .querySelectorAll(".step-content")
            .forEach((el) => el.classList.add("hidden"));

        // Show current step
        const currentStep = document.getElementById(`step-${step}`);
        if (currentStep) currentStep.classList.remove("hidden");

        // Update indicators
        document.getElementById("step-label").innerText = `Step ${step} of 3`;

        for (let i = 1; i <= 3; i++) {
            const dot = document.getElementById(`step-dot-${i}`);
            if (dot) {
                if (i <= step) {
                    dot.classList.add("bg-primary");
                    dot.classList.remove("bg-slate-200");
                } else {
                    dot.classList.add("bg-slate-200");
                    dot.classList.remove("bg-primary");
                }
            }
        }
    }

    const form = document.getElementById("intake-form");
    if (form) {
        form.addEventListener("submit", (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const name = formData.get("full_name");

            // Hide everything and show success
            document
                .querySelectorAll(".step-content")
                .forEach((el) => el.classList.add("hidden"));
            document.getElementById("success").classList.remove("hidden");
            document.getElementById("user-name").innerText = name;

            const stepLabel = document.getElementById("step-label");
            if (stepLabel) stepLabel.classList.add("hidden");

            // In a real app, you'd send this to your backend
            console.log("Form Submitted:", Object.fromEntries(formData));
        });
    }
</script>
