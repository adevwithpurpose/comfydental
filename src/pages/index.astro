---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import EmpathyBridge from "../components/EmpathyBridge.astro";
import ServiceGrid from "../components/ServiceGrid.astro";

import TechShowcase from "../components/TechShowcase.astro";
import ProcessSteps from "../components/ProcessSteps.astro";
import DoctorBio from "../components/DoctorBio.astro";
import Testimonials from "../components/Testimonials.astro";
import FAQ from "../components/FAQ.astro";
---

<Layout title="Comfy Dental | Pain-Free Premium Dentist in Lahore">
	<Hero />
	<EmpathyBridge />
	<!-- Services Preview -->
	<ServiceGrid />

	<!-- Technology -->
	<TechShowcase />

	<!-- Journey -->
	<ProcessSteps />

	<!-- Doctor -->
	<DoctorBio />

	<!-- Social Proof -->
	<Testimonials />

	<!-- AEO/SEO Questions -->
	<FAQ />

	<section class="py-0 relative h-96 w-full group overflow-hidden">
		<iframe
			src="https://maps.google.com/maps?q=Comfy+Dental+81CCA+DHA+Phase+5+Lahore&t=&z=15&ie=UTF8&iwloc=&output=embed"
			width="100%"
			height="100%"
			style="border:0;"
			allowfullscreen=""
			loading="lazy"
			class="relative z-0"
			referrerpolicy="no-referrer-when-downgrade"></iframe>

		<!-- Get Directions Button Overlay -->
		<div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-10">
			<a
				href="https://www.google.com/maps/dir//Comfy+Dental+by+Dr.+Anam+Shahzad,+First+Floor,+81-CCA,+Phase+5+D.H.A,+Lahore,+54000,+Pakistan/@31.4605811,74.4132867,17z"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center gap-2 px-8 py-4 bg-primary text-white font-bold rounded-2xl shadow-2xl hover:bg-primary-light transition-all transform hover:scale-105 whitespace-nowrap"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
					></path>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
				</svg>
				Get Directions to Clinic
			</a>
		</div>
	</section>
</Layout>
