---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout title="Virtual Assessment - Comfy Dental">
    <section class="bg-sand py-20 md:py-32 relative overflow-hidden">
        <!-- Decorative background -->
        <div
            class="absolute top-0 left-0 w-full h-full bg-white/30 backdrop-blur-3xl -z-10"
        >
        </div>

        <div class="container mx-auto px-4">
            <div class="text-center mb-20">
                <span
                    class="text-sage font-bold tracking-wider uppercase text-sm mb-3 block"
                    >Boutique Care</span
                >
                <h1
                    class="text-4xl md:text-7xl font-bold text-slate-800 mb-8 tracking-tight"
                >
                    Your Smile Sanctuary
                </h1>
                <p
                    class="text-xl text-slate-600 max-w-2xl mx-auto font-medium leading-relaxed italic"
                >
                    Lahore's premier destination for anxiety-free
                    transformations. Reach out today for a personalized
                    assessment.
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-start">
                <!-- Left Col: Info & Map -->
                <div class="space-y-12">
                    <!-- Info Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div
                            class="bg-white/80 backdrop-blur p-5 rounded-3xl shadow-lg shadow-slate-200/50 border border-white flex items-center gap-4"
                        >
                            <div
                                class="w-12 h-12 bg-sand rounded-2xl flex items-center justify-center text-xl text-mocha shrink-0"
                            >
                                üìç
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-800 text-lg">
                                    Visit Us
                                </h3>
                                <p
                                    class="text-slate-500 text-xs font-medium leading-relaxed"
                                >
                                    1st Floor, 81CCA, Sector C, Phase 5, D.H.A,
                                    Lahore.
                                </p>
                            </div>
                        </div>

                        <div
                            class="bg-white/80 backdrop-blur p-5 rounded-3xl shadow-lg shadow-slate-200/50 border border-white flex items-center gap-4"
                        >
                            <div
                                class="w-12 h-12 bg-sand rounded-2xl flex items-center justify-center text-xl text-mocha shrink-0"
                            >
                                üìû
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-800 text-lg">
                                    Connect
                                </h3>
                                <p class="text-slate-500 text-sm font-medium">
                                    <a
                                        href="tel:+923401555530"
                                        class="hover:text-mocha transition-colors"
                                        >+92 340 1555530</a
                                    >
                                </p>
                            </div>
                        </div>

                        <div
                            class="bg-white/80 backdrop-blur p-5 rounded-3xl shadow-lg shadow-slate-200/50 border border-white flex items-center gap-4"
                        >
                            <div
                                class="w-12 h-12 bg-sand rounded-2xl flex items-center justify-center text-xl text-mocha shrink-0"
                            >
                                ‚úâÔ∏è
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-800 text-lg">
                                    Inquire
                                </h3>
                                <p
                                    class="text-slate-500 text-sm font-medium line-clamp-1"
                                >
                                    <a
                                        href="mailto:info@comfydental.co"
                                        class="hover:text-mocha transition-colors"
                                        >info@comfydental.co</a
                                    >
                                </p>
                            </div>
                        </div>

                        <div
                            class="bg-white/80 backdrop-blur p-5 rounded-3xl shadow-lg shadow-slate-200/50 border border-white flex items-center gap-4"
                        >
                            <div
                                class="w-12 h-12 bg-sand rounded-2xl flex items-center justify-center text-xl text-mocha shrink-0"
                            >
                                ‚è∞
                            </div>
                            <div>
                                <h3 class="font-bold text-slate-800 text-lg">
                                    Hours
                                </h3>
                                <p
                                    class="text-slate-500 text-xs font-medium leading-tight"
                                >
                                    Mon - Sat: 12:00 - 8:00 PM<br />
                                    <span class="text-sage font-bold"
                                        >Sunday: Closed</span
                                    >
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Map -->
                    <div
                        class="relative rounded-4xl overflow-hidden shadow-2xl h-96 border-8 border-white group"
                    >
                        <iframe
                            src="https://maps.google.com/maps?q=Comfy+Dental+81CCA+DHA+Phase+5+Lahore&t=&z=15&ie=UTF8&iwloc=&output=embed"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            class="transition-all duration-700"
                            referrerpolicy="no-referrer-when-downgrade"
                        ></iframe>

                        <!-- Get Directions Button -->
                        <div
                            class="absolute bottom-6 left-1/2 -translate-x-1/2 z-10"
                        >
                            <a
                                href="https://www.google.com/maps/dir/?api=1&destination=31.455506,74.407985"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center gap-2 px-6 py-3 bg-primary text-white font-bold rounded-2xl shadow-2xl hover:bg-primary-light transition-all transform hover:scale-105"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                                Get Directions
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Right Col: Form -->
                <div class="sticky top-32">
                    <ContactForm />
                </div>
            </div>
        </div>
    </section>
</Layout>
