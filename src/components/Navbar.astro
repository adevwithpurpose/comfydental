<!-- Main Navigation Bar -->
<nav
    class="sticky top-0 z-50 bg-soft-light/95 backdrop-blur-md shadow-sm border-b border-white/50"
>
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <!-- Logo -->
        <a href="/" class="flex items-center group">
            <img
                src="/logo.png"
                alt="Comfy Dental - Pain-Free Premium Dentistry in Lahore"
                width="600"
                height="192"
                class="h-10 sm:h-12 md:h-16 w-auto object-contain"
            />
        </a>

        <!-- Desktop Links -->
        <div
            class="hidden md:flex items-center gap-10 text-slate-600 font-semibold"
        >
            <a href="/" class="hover:text-mocha transition-colors">Home</a>
            <a href="/about" class="hover:text-mocha transition-colors"
                >About Us</a
            >
            <a href="/services" class="hover:text-mocha transition-colors"
                >Treatments</a
            >
            <a href="/gallery" class="hover:text-mocha transition-colors"
                >Gallery</a
            >
            <a href="/patient-hub" class="hover:text-mocha transition-colors"
                >Patient Hub</a
            >
            <a href="/contact" class="hover:text-mocha transition-colors"
                >Contact</a
            >
        </div>

        <!-- Buttons + Mobile Toggle -->
        <div class="flex items-center gap-4">
            <a
                href="tel:+923401555530"
                class="hidden lg:inline-flex items-center gap-2 px-4 py-2 text-mocha font-bold hover:text-slate-800 transition-colors"
            >
                +92 340 1555530
            </a>
            <a
                href="/contact"
                class="hidden sm:inline-flex items-center gap-2 px-8 py-3 bg-primary text-white rounded-2xl font-bold hover:bg-primary-light transition-all transform hover:scale-105 shadow-xl shadow-primary/20 cursor-pointer"
            >
                Virtual Assessment
            </a>

            <!-- Mobile Menu Toggle Button -->
            <button
                id="mobile-menu-toggle"
                type="button"
                class="md:hidden p-2 text-slate-600 hover:text-mocha transition-colors"
                aria-label="Open Menu"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>
</nav>

<!-- Mobile Menu - OUTSIDE the nav for proper stacking -->
<div
    id="mobile-menu"
    class="fixed inset-0 z-[99999] md:hidden"
    style="display: none; background-color: #F5F3EF;"
>
    <div class="h-full w-full flex flex-col">
        <!-- Header -->
        <div
            class="flex items-center justify-between px-6 py-6 bg-white shadow-sm"
        >
            <img src="/logo.png" alt="Comfy Dental" class="h-10 w-auto" />
            <button
                id="mobile-menu-close"
                type="button"
                class="p-2 text-slate-700 hover:text-primary transition-colors"
                aria-label="Close Menu"
            >
                <svg
                    class="w-8 h-8"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <!-- Centered Content -->
        <div class="flex-1 flex flex-col justify-center px-8 overflow-y-auto">
            <nav class="space-y-2 mb-12">
                <a
                    href="/"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >Home</a
                >
                <a
                    href="/about"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >About Us</a
                >
                <a
                    href="/services"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >Treatments</a
                >
                <a
                    href="/gallery"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >Gallery</a
                >
                <a
                    href="/patient-hub"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >Patient Hub</a
                >
                <a
                    href="/contact"
                    class="block text-3xl font-bold text-slate-800 hover:text-primary transition-colors py-4 px-4 rounded-2xl hover:bg-white"
                    >Contact</a
                >
            </nav>

            <div class="space-y-4">
                <a
                    href="/contact"
                    class="block w-full py-5 bg-primary text-white text-center font-bold rounded-2xl shadow-2xl shadow-primary/30 text-lg"
                    >Get Free Assessment</a
                >
                <a
                    href="tel:+923401555530"
                    class="block w-full py-5 text-center font-bold text-mocha border-2 border-mocha/20 rounded-2xl bg-white text-lg"
                    >ðŸ“ž +92 340 1555530</a
                >
                <a
                    href="https://www.google.com/maps/dir//Comfy+Dental+by+Dr.+Anam+Shahzad,+First+Floor,+81-CCA,+Phase+5+D.H.A,+Lahore,+54000,+Pakistan/@31.4605811,74.4132867,17z"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center gap-2 w-full py-5 text-center font-bold text-slate-700 border-2 border-slate-200 rounded-2xl bg-white text-lg hover:border-primary hover:text-primary transition-colors"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Get Directions
                </a>
            </div>
        </div>
    </div>
</div>

<script is:inline>
    // Mobile menu toggle logic
    document.addEventListener("DOMContentLoaded", function () {
        var toggleBtn = document.getElementById("mobile-menu-toggle");
        var closeBtn = document.getElementById("mobile-menu-close");
        var menu = document.getElementById("mobile-menu");

        if (toggleBtn && closeBtn && menu) {
            toggleBtn.addEventListener("click", function () {
                menu.style.display = "block";
                document.body.style.overflow = "hidden";
            });

            closeBtn.addEventListener("click", function () {
                menu.style.display = "none";
                document.body.style.overflow = "";
            });
        }
    });
</script>
