---
const phoneNum = "923401555530";
---

<div class="fixed bottom-6 right-6 z-50 flex flex-col items-end gap-2 group">
    <!-- Contextual Bubble -->
    <div
        id="wa-bubble"
        class="bg-white px-4 py-2 rounded-2xl shadow-xl border border-slate-100 mb-2 opacity-0 translate-y-2 pointer-events-none transition-all duration-500 group-hover:opacity-100 group-hover:translate-y-0 text-sm font-medium text-slate-700 whitespace-nowrap relative"
    >
        <span id="wa-message">Need an appointment?</span>
        <div
            class="absolute -bottom-1.5 right-6 w-3 h-3 bg-white border-r border-b border-slate-100 rotate-45"
        >
        </div>
    </div>

    <!-- The Button -->
    <a
        id="wa-button"
        href={`https://wa.me/${phoneNum}`}
        target="_blank"
        class="relative bg-[#25D366] text-white p-4 rounded-full shadow-2xl hover:scale-110 transition-all duration-300 flex items-center justify-center hover:shadow-[#25d366]/40 cursor-pointer overflow-hidden"
    >
        <!-- Pulse Effect -->
        <span
            class="absolute inset-0 rounded-full bg-[#25D366] animate-ping opacity-25"
        ></span>

        <svg
            class="w-8 h-8 relative z-10"
            fill="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><path
                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
            ></path></svg
        >
    </a>
</div>

<script define:vars={{ phoneNum }}>
    const messageMap = {
        "/": "Hi Comfy Dental! I have a question about your pain-free dentistry.",
        "/services":
            "Hi! I was looking at your services and wanted to ask about a specific treatment.",
        "/about":
            "Hi! I'd like to learn more about Dr. Anam and book a consultation.",
        "/contact":
            "Hi! I'm on your contact page and would like to book an appointment.",
        "/gallery":
            "Hi! I loved your smile makeover gallery. Can I get a quote?",
    };

    const bubbleMap = {
        "/": "Pain-free dentistry? Ask us anything!",
        "/services": "Need pricing for a service?",
        "/about": "Meet Dr. Anam",
        "/contact": "Book your slot now!",
        "/gallery": "Want a smile like these?",
    };

    const path = window.location.pathname.replace(/\/$/, "") || "/";
    const waButton = document.getElementById("wa-button");
    const waMessage = document.getElementById("wa-message");
    const waBubble = document.getElementById("wa-bubble");

    if (waButton && messageMap[path]) {
        const text = encodeURIComponent(messageMap[path]);
        waButton.href = `https://wa.me/${phoneNum}?text=${text}`;
    }

    if (waMessage && bubbleMap[path]) {
        waMessage.innerText = bubbleMap[path];
    }

    // Auto-show bubble after 3 seconds
    setTimeout(() => {
        if (waBubble) {
            waBubble.classList.add("opacity-100", "translate-y-0");
        }
    }, 3000);
</script>
