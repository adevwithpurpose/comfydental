---
const steps = [
    {
        num: "01",
        title: "The Consultation",
        desc: "We listen to your needs, take 3D scans, and plan your perfect smile in a relaxed setting.",
        icon: "chat",
    },
    {
        num: "02",
        title: "Preparation & Comfort",
        desc: "Gentle prep work while you relax. We prioritize your comfort at every step using advanced pain-free techniques.",
        icon: "sparkles",
    },
    {
        num: "03",
        title: "The Reveal",
        desc: "Walk out with your new smile. Final adjustments, polishing, and a confidence boost that lasts.",
        icon: "smile",
    },
];
---

<section id="process" class="py-24 bg-sand relative overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-20">
            <span
                class="text-mocha font-bold tracking-wider uppercase text-sm mb-2 block"
                >Your Experience</span
            >
            <h2 class="text-3xl md:text-5xl font-bold text-slate-800 mb-6">
                The Path to Complete Serenity
            </h2>
            <p
                class="text-slate-600 max-w-2xl mx-auto text-lg font-medium italic"
            >
                From anxiety to relief. We've simplified the process to ensure
                you feel in control.
            </p>
        </div>

        <div class="relative">
            <!-- Connecting Line (Desktop) -->
            <div
                class="hidden md:block absolute top-[60px] left-10 right-10 h-1 bg-white z-0"
            >
                <div class="absolute inset-0 bg-mocha/20 w-1/2"></div>
                <!-- Partial fill visual -->
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-12 relative z-10">
                {
                    steps.map((step) => (
                        <div class="relative group">
                            <div class="w-32 h-32 rounded-4xl bg-white border-4 border-white shadow-xl flex items-center justify-center mx-auto mb-8 relative z-10 group-hover:scale-110 transition-all duration-500">
                                <span class="relative z-10">
                                    {step.icon === "chat" && (
                                        <svg
                                            class="w-16 h-16 text-mocha"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                                            />
                                        </svg>
                                    )}
                                    {step.icon === "sparkles" && (
                                        <svg
                                            class="w-16 h-16 text-mocha"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                                            />
                                        </svg>
                                    )}
                                    {step.icon === "smile" && (
                                        <svg
                                            class="w-16 h-16 text-mocha"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                            />
                                        </svg>
                                    )}
                                </span>
                                <div class="absolute inset-0 bg-mocha/5 rounded-3xl transform rotate-6 scale-90 -z-10 group-hover:rotate-0 transition-transform" />
                            </div>
                            <div class="text-center px-4">
                                <span class="inline-block mb-3 px-3 py-1 bg-white text-mocha rounded-full text-xs font-bold tracking-widest border border-slate-100">
                                    PHASE {step.num}
                                </span>
                                <h3 class="text-2xl font-bold text-slate-800 mb-4">
                                    {step.title}
                                </h3>
                                <p class="text-slate-600 leading-relaxed font-medium">
                                    {step.desc}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
