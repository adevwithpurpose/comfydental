<script>
    function initSlider() {
        const container = document.getElementById('slider-container');
        const afterContainer = document.getElementById('after-image-container');
        const handle = document.getElementById('slider-handle');

        if (!container || !afterContainer || !handle) return;

        let active = false;

        const updateSlider = (x: number) => {
            const rect = container.getBoundingClientRect();
            let pos = ((x - rect.left) / rect.width) * 100;
            
            // Boundary checks
            pos = Math.max(0, Math.min(pos, 100));

            afterContainer.style.width = `${pos}%`;
            handle.style.left = `${pos}%`;
        };

        const handleMove = (e: MouseEvent | TouchEvent) => {
            if (!active) return;
            const x = (e instanceof MouseEvent) ? e.pageX : e.touches[0].pageX;
            updateSlider(x);
        };

        container.addEventListener('mousedown', () => active = true);
        window.addEventListener('mouseup', () => active = false);
        container.addEventListener('touchstart', () => active = true);
        window.addEventListener('touchend', () => active = false);

        window.addEventListener('mousemove', handleMove);
        window.addEventListener('touchmove', handleMove);
    }

    // Run on init and after swaps
    initSlider();
    document.addEventListener('astro:page-load', initSlider);
</script>
