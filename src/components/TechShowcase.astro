---
const techs = [
    {
        title: "Intraoral Scanners",
        benefit: "No Messy Molds",
        desc: "We use TRIOS digital scanners to create a 3D map of your mouth in seconds. Faster, more accurate, and completely gag-free.",
        icon: "camera",
    },
    {
        title: "Laser Dentistry",
        benefit: "Drill-Free Precision",
        desc: "Advanced lasers allow us to perform treatments with minimal bleeding and faster healing times, often without the need for traditional drills.",
        icon: "bolt",
    },
    {
        title: "AI Smile Design",
        benefit: "Photorealistic Previews",
        desc: "Using SmileCloud AI, we simulate your results before we ever touch a tooth. You are the architect of your own transformation.",
        icon: "cpu",
    },
    {
        title: "3D CBCT Imaging",
        benefit: "Ultra-Low Radiation",
        desc: "High-definition 3D imaging allows for pinpoint accuracy in implant placement and surgical planning, ensuring safe and predictable outcomes.",
        icon: "signal",
    },
];
---

<section id="technology" class="py-20 bg-sand relative overflow-hidden">
    <!-- Decorative element -->
    <div
        class="absolute top-0 right-0 w-1/3 h-full bg-sage/5 -skew-x-12 transform translate-x-1/2"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            <div class="lg:w-1/2">
                <span
                    class="text-sage font-bold tracking-wider uppercase text-sm mb-3 block"
                    >Modern Precision</span
                >
                <h2
                    class="text-3xl md:text-5xl font-bold text-slate-800 mb-8 leading-tight"
                >
                    <span class="font-serif italic text-mocha font-medium"
                        >Technological Synergy</span
                    > for Your Comfort
                </h2>
                <p
                    class="text-slate-600 text-lg mb-10 leading-relaxed font-medium"
                >
                    At Comfy Dental, technology isn't just about efficiencyâ€”it's
                    about eliminating the friction from your dental visit. From
                    "No-Gag Scans" to "Drill-Free" lasers, we invest in the
                    world's most advanced tools to ensure your experience is as
                    painless as possible.
                </p>

                <div class="space-y-6">
                    {
                        techs.slice(0, 2).map((t) => (
                            <div class="flex items-start gap-6 bg-white/90 p-6 rounded-3xl border border-white shadow-[0_8px_30px_rgb(0,0,0,0.04)] transform-gpu">
                                <div class="w-14 h-14 bg-sand rounded-2xl flex items-center justify-center flex-shrink-0">
                                    {t.icon === "camera" && (
                                        <svg
                                            class="w-7 h-7 text-mocha"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
                                            />
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"
                                            />
                                        </svg>
                                    )}
                                    {t.icon === "bolt" && (
                                        <svg
                                            class="w-7 h-7 text-mocha"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M13 10V3L4 14h7v7l9-11h-7z"
                                            />
                                        </svg>
                                    )}
                                </div>
                                <div>
                                    <h4 class="text-xl font-bold text-slate-800 mb-1">
                                        {t.title}
                                    </h4>
                                    <p class="text-sage font-bold text-xs uppercase tracking-widest mb-2">
                                        {t.benefit}
                                    </p>
                                    <p class="text-slate-600 text-sm font-medium leading-relaxed">
                                        {t.desc}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div class="lg:w-1/2 grid grid-cols-1 sm:grid-cols-2 gap-6">
                {
                    techs.slice(2).map((t) => (
                        <div class="bg-white/90 p-8 rounded-4xl border border-white shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_20px_40px_rgb(0,0,0,0.08)] transition-all group transform-gpu">
                            <div class="w-16 h-16 bg-sand rounded-3xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
                                {t.icon === "cpu" && (
                                    <svg
                                        class="w-8 h-8 text-mocha"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                                        />
                                    </svg>
                                )}
                                {t.icon === "signal" && (
                                    <svg
                                        class="w-8 h-8 text-mocha"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"
                                        />
                                    </svg>
                                )}
                            </div>
                            <h4 class="text-xl font-bold text-slate-800 mb-1">
                                {t.title}
                            </h4>
                            <p class="text-sage font-bold text-xs uppercase tracking-widest mb-4">
                                {t.benefit}
                            </p>
                            <p class="text-slate-600 text-sm font-medium leading-relaxed">
                                {t.desc}
                            </p>
                        </div>
                    ))
                }

                <!-- Call to action block -->
                <div
                    class="sm:col-span-2 bg-mocha p-8 rounded-4xl text-white flex flex-col sm:flex-row items-center justify-between gap-6 shadow-xl"
                >
                    <div class="text-center sm:text-left">
                        <p class="text-lg font-bold">
                            Experience the Future of Care
                        </p>
                        <p class="text-white/70 text-sm font-medium">
                            Book a high-tech consultation today.
                        </p>
                    </div>
                    <a
                        href="/contact"
                        class="px-8 py-3 bg-soft-light text-mocha font-bold rounded-2xl hover:bg-sand transition-all shadow-lg whitespace-nowrap"
                    >
                        Inquire Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
