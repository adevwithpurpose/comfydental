---
const currentYear = new Date().getFullYear();
---

<footer
    class="bg-sand text-slate-600 pt-16 pb-12 rounded-t-[4rem] mt-20 relative overflow-hidden"
>
    <!-- Decorative element -->
    <div
        class="absolute -top-24 -right-24 w-64 h-64 bg-white/40 rounded-full blur-3xl -z-10"
    >
    </div>
    <div
        class="absolute -bottom-24 -left-24 w-64 h-64 bg-sage/10 rounded-full blur-3xl -z-10"
    >
    </div>

    <div class="container mx-auto px-4">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-16 mb-12"
        >
            <!-- Brand Column -->
            <div class="space-y-8">
                <a href="/" class="block group w-max">
                    <img
                        src="/logo.png"
                        alt="Comfy Dental - The Best Pain-Free Dentist in Lahore"
                        width="180"
                        height="56"
                        class="h-14 w-auto object-contain group-hover:scale-105 transition-transform duration-500"
                    />
                </a>
                <p
                    class="text-slate-500 leading-relaxed font-medium text-sm lg:text-base"
                >
                    Redefining the dental experience with boutique hospitality
                    and pain-free precision. Your sanctuary for complete smile
                    wellness in the heart of Lahore.
                </p>
                <div class="flex gap-4">
                    <a
                        href="https://www.instagram.com/comfydentall/"
                        target="_blank"
                        class="w-11 h-11 rounded-xl bg-white flex items-center justify-center text-mocha shadow-sm hover:bg-mocha hover:text-white hover:-translate-y-1 transition-all duration-300 border border-slate-100"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href="https://www.facebook.com/p/ComfyDental-61564437699755/"
                        target="_blank"
                        class="w-11 h-11 rounded-xl bg-white flex items-center justify-center text-mocha shadow-sm hover:bg-mocha hover:text-white hover:-translate-y-1 transition-all duration-300 border border-slate-100"
                    >
                        <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                            ></path>
                        </svg>
                    </a>
