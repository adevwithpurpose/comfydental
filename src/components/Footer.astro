            <div class="lg:pl-8">
                <h4
                    class="text-slate-800 font-bold mb-8 text-lg flex items-center gap-2"
                >
                    <span class="w-1 h-5 bg-mocha rounded-full"></span>
                    Quick Links
                </h4>
                <ul class="space-y-4 font-medium">
                    <li>
                        <a
                            href="/"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >The Experience</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Our Story</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Treatments</a
                        >
                    </li>
                    <li>
                        <a
                            href="/patient-hub"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Patient Hub</a
                        >
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Book Consultation</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Specialties -->
            <div>
                <h4
                    class="text-slate-800 font-bold mb-8 text-lg flex items-center gap-2"
                >
                    <span class="w-1 h-5 bg-sage rounded-full"></span>
                    Specialties
                </h4>
                <ul class="space-y-4 font-medium">
                    <li>
                        <a
                            href="/services"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Cosmetic Dentistry</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Anxiety-Free Care</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Dental Implants</a
                        >
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="hover:text-mocha transition-all duration-300 hover:pl-2"
                            >Complete Smile Makeover</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h4
                    class="text-slate-800 font-bold mb-8 text-lg flex items-center gap-2"
                >
                    <span class="w-1 h-5 bg-lime-500 rounded-full"></span>
                    Visit Us
                </h4>
                <address class="not-italic">
                    <ul class="space-y-6 font-medium text-sm lg:text-base">
                        <li class="flex items-start gap-4 group">
                            <div
                                class="w-10 h-10 rounded-xl bg-white flex items-center justify-center shadow-sm shrink-0 border border-slate-50 group-hover:bg-sand transition-colors"
                            >
                                <svg
                                    class="w-5 h-5 text-mocha"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
